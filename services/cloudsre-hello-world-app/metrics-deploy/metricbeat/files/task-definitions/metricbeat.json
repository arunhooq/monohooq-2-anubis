[
  {
    "volumesFrom": [],
    "extraHosts": null,
    "linuxParameters": null,
    "dnsServers": null,
    "disableNetworking": null,
    "dnsSearchDomains": null,
    "hostname": null,
    "essential": true,
    "entryPoint": [],
    "environment": [
      {
        "name": "CONTAINER_NAME",
        "value": "${container_name}"
      },
      {
        "name": "ENVIRONMENT",
        "value": "${environment}"
      }
    ],
    "mountPoints": [
      {
        "readOnly": true,
        "containerPath": "/hostfs",
        "sourceVolume": "root"
      },
      {
        "readOnly": true,
        "containerPath": "/hostfs/proc",
        "sourceVolume": "proc"
      },
      {
        "readOnly": true,
        "containerPath": "/hostfs/sys/fs/cgroup",
        "sourceVolume": "cgroup"
      },
      {
        "readOnly": true,
        "containerPath": "/var/run/docker.sock",
        "sourceVolume": "docker_sock"
      }
    ],
    "name": "${container_name}",
    "ulimits": [
      {
        "softLimit": 10000,
        "hardLimit": 30000,
        "name": "nofile"
      }
    ],
    "repositoryCredentials": {
      "credentialsParameter": "${github_package_credentials_arn}"
    },
    "dockerSecurityOptions": null,
    "links": null,
    "workingDirectory": null,
    "secrets": [
      {
              "name": "ELASTIC_CLOUD_ID",
              "valueFrom": "arn:aws:ssm:${region}:${aws_account_id}:parameter/app/elastic/ELASTIC_CLOUD_ID"
      },
      {
              "name": "ELASTIC_CLOUD_AUTH",
              "valueFrom": "arn:aws:ssm:${region}:${aws_account_id}:parameter/app/elastic/ELASTIC_CLOUD_AUTH"
      }
    ],
    "readonlyRootFilesystem": null,
    "image": "${docker_image}:${docker_tag}",
    "command": [
      "metricbeat",
      "-e",
      "-system.hostfs=/hostfs"
    ],
    "user": "root",
    "dockerLabels": null,
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "${awslogs_group}",
        "awslogs-region": "${region}",
        "awslogs-stream-prefix": "${container_name}"
      }
    },
    "cpu": 64,
    "privileged": null,
    "memory": 512 
  }
]
